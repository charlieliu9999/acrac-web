# Dev Dockerfile for Vite React app
FROM node:18-alpine

WORKDIR /app

# Install deps first to leverage layer cache
COPY package*.json ./
RUN npm ci || npm install

# Copy source
COPY . .

EXPOSE 5173

# Run Vite dev server on 0.0.0.0 for container access (match nginx upstream)
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]
